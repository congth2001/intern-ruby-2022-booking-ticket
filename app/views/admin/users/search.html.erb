<h2><%= t "head_search" %></h2>
<div class="admin-search-form">
  <div class="primary-nav-wrapper desktop hidden-xs hidden-sm">
    <div class="search">
      <form class="search-form">
      </form>
        <%= form_tag admin_users_search_path, {class: "search-form"} do %>
          <div class="input-append">
            <%= text_field_tag :search, nil, placeholder: t("find_box"), class: "search-box" %>
            <%= button_tag(type: "submit", class: "search-btn") do %>
              <%= content_tag(:i,nil, class: "fa fa-thin fa-magnifying-glass")%>
            <% end %>
          </div>
        <% end %>
    </div>
  </div>
</div>
<table class="table table-striped">
  <tr>
    <th><%= t ".id" %></th>
    <th><%= t ".name" %></th>
    <th><%= t ".email" %></th>
    <th><%= t ".phone" %></th>
    <th><%= t ".date_birth" %></th>
    <th><%= t ".sex" %></th>
    <th><%= t ".created_at" %></th>
    <th><%= t ".status" %></th>
    <th></th>
  </tr>

  <% @stt = 1 + (@pagy.page - 1) * Settings.digits.admin_movie_per_page %>
  <%= render @users %>
</table>
<%== pagy_bootstrap_nav @pagy %>